{
  "tasks": {
    "type-check": "deno check **/*.ts",
    "test": "deno test --allow-all",
    "dev": "supabase functions serve",
    "lint": "deno lint **/*.ts"
  },
  "imports": {
    "@supabase/functions-js": "https://esm.sh/@supabase/functions-js@2",
    "supabase": "https://esm.sh/@supabase/supabase-js@2",
    "stripe": "https://esm.sh/stripe@14.12.0"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  }
}