# QuoteKit Production Environment Variables
# Copy this file to .env.production and fill in your actual production values
# NEVER commit .env.production to version control

# ==============================================
# SUPABASE PRODUCTION CONFIGURATION
# ==============================================
# Get these from your Supabase project dashboard:
# https://supabase.com/dashboard/project/YOUR_PROJECT_ID/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.YOUR_SERVICE_ROLE_KEY
SUPABASE_DB_PASSWORD=YOUR_SECURE_DB_PASSWORD

# ==============================================
# STRIPE PRODUCTION CONFIGURATION
# ==============================================
# Use LIVE keys for production (pk_live_... and sk_live_...)
# Get these from: https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_YOUR_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Production Resend API key
# Get from: https://resend.com/api-keys

RESEND_API_KEY=re_YOUR_PRODUCTION_API_KEY

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Your production domain
NEXT_PUBLIC_SITE_URL=https://your-production-domain.com

# Environment
NODE_ENV=production

# ==============================================
# OPTIONAL: MONITORING & ANALYTICS
# ==============================================
# PostHog (if using)
NEXT_PUBLIC_POSTHOG_KEY=phc_YOUR_POSTHOG_KEY
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Vercel Analytics (if deploying to Vercel)
VERCEL_ANALYTICS_ID=YOUR_ANALYTICS_ID
